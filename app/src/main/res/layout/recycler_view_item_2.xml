<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="horizontal"
                                             android:padding="8dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/linearLayout">
    <ImageView
            android:id="@+id/fotoAmigo"
            android:layout_width="106dp"
            android:layout_height="82dp"
            tools:src="@tools:sample/avatars" tools:layout_conversion_absoluteHeight="50dp"
            tools:layout_conversion_absoluteWidth="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@drawable/profile" tools:layout_editor_absoluteX="61dp"/>
    <TextView
            android:id="@+id/nomeAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:text="@tools:sample/full_names" tools:layout_conversion_absoluteHeight="29dp"
            tools:layout_conversion_absoluteWidth="54dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/fotoAmigo"
            android:layout_marginStart="12dp"/>
    <CheckBox
            android:text="Convidar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBoxConvite"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="265dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.459" app:layout_constraintStart_toEndOf="@+id/nomeAmigo"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="37dp"
            android:layout_height="44dp" app:srcCompat="@android:drawable/btn_star_big_on"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/favorito"
            android:background="@color/white" app:layout_constraintVertical_bias="0.557"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/fotoAmigo" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>