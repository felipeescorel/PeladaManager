<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:src="@tools:sample/avatars"
            android:id="@+id/imageView2" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="372dp"
            android:layout_height="239dp"
            tools:listitem="@layout/recycler_view_item_1" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recyclerView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" tools:text="@tools:sample/full_names"
            android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/ratingBar"
    />
    <RatingBar
            android:layout_width="187dp"
            android:layout_height="43dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:id="@+id/ratingBar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.307"
            android:numStars="@android:integer/status_bar_notification_info_maxnum" android:isIndicator="true"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" android:id="@+id/floatingActionButton" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.022"/>
</android.support.constraint.ConstraintLayout>